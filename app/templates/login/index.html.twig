{% extends 'layout.html.twig' %}

{% block title %}
  Login to view this resource
{% endblock %}

{% block page_contents %}
    {% if error %}
        <div class="row error justify-content-center">
          {{ error.messageKey | trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <div class="row mb-3">

          <div class="col-md-6">
            <label for="username">Username:</label>
            <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required />
          </div>

          <div class="col-md-6">
            <label for="password">Password:</label>
            <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required />
          </div>

        </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <div class="row">
          <div class="col-md-12">
            <button type="submit" class="btn btn-primary form-control">Login</button>
          </div>
        </div>
    </form>
{% endblock %}